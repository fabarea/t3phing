<?xml version="1.0"?>
<project name="CacheHandler" basedir="Tasks" default="">
<!--
		==============================================
		Clear cache
		==============================================
	-->
	<target name="clear_cache" depends="c, cc, ccc"/>
	<target name="c" depends="" >
		<echo>------------------------------</echo>
		<echo>| Deleting cached depth 1     |</echo>
		<echo>------------------------------</echo>
		<commandLocal command="rm -rf ${site.local.directory}typo3temp/Cache"/>
		<delete>
			<fileset refid="typo3conf"/>
		</delete>
	</target>

	<target name="cc" depends="c">
		<echo>------------------------------</echo>
		<echo>| Deleting cached depth 2     |</echo>
		<echo>------------------------------</echo>
		<delete>
			<fileset refid="typo3temp"/>
		</delete>
	</target>

	<target name="ccc" depends="c, cc">
		<echo>------------------------------</echo>
		<echo>| Deleting cached depth 3     |</echo>
		<echo>------------------------------</echo>
		<clearCache database="${database.local.name}" username="${database.local.username}"
		            password="${database.local.password}"/>

		<delete>
			<fileset refid="processedFiles"/>
		</delete>
	</target>


	<!--
		==============================================
		System warmup
		==============================================
	-->
	<target name="warmup" depends="">
		<echo>-----------------------------</echo>
		<echo>| Warmup website             |</echo>
		<echo>-----------------------------</echo>
		<commandLocal command="curl -s -A &quot;Mozilla/5.0&quot; http://${domain.local}/typo3/index.php > /dev/null"/>
		<commandLocal command="curl -s -I http://${domain.local}/index.php > /dev/null"/>
	</target>

</project>