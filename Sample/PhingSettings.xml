<?xml version="1.0"?>
<project name="main" basedir="Examples" default="" description="Fetches the data from a remote website">

	<!--

	Assuming these tasks are done:
	==============================
	- create entry in /etc/hosts or DNS
	- create new virtual host
	- create new database

	-->

	<!-- Flags -->
	<property name="dryRun" value="${dryRun}"/>

	<!-- Remote and Local environment  -->
	<property name="remote.server.credentials" value="CHANGE_ME"/><!-- username@host.name -->
	<property name="remote.directory.temp" value="/tmp"/>
	<property name="local.directory.temp" value="${remote.directory.temp}"/>
	<property name="local.mysql.binary" value="mysql"/>
	<property name="local.core.path" value="/t3core/typo3_src-6.1"/><!-- CHANGE_ME -->

	<!-- Remote site configuration -->
	<property name="remote.domain" value="example.com"/><!-- CHANGE_ME MAIN_DOMAIN WITHOUT WWW -->
	<property name="remote.directory.home" value="CHANGE_ME"/><!-- ABSOLUTE PATH -->
	<property name="remote.directory.documentRoot" value="${remote.directory.home}/htdocs"/>
	<property name="remote.database.credentials" value="${remote.directory.home}/configuration/Settings.php"/>

	<!-- Properties for local -->
	<property name="local.domain" value="example.local"/>
	<property name="local.directory.home" value="."/>
	<property name="local.directory.documentRoot" value="htdocs"/>
	<property name="local.database.credentials" value="configuration/Settings.php"/>

</project>
